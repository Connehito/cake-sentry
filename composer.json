{
    "name": "connehito/cake-sentry",
    "description": "Sentry plugin for CakePHP3",
    "type": "cakephp-plugin",
    "require": {
        "php": "^7.1",
        "cakephp/cakephp": "^4.0",
        "php-http/guzzle6-adapter": "^v1.1.1|^v2.0",
        "sentry/sentry": "^2.2"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "jangregor/phpstan-prophecy": "^0.4.2",
        "phpstan/phpstan": "@stable",
        "phpunit/phpunit": "^8.5.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Connehito\\CakeSentry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Connehito\\CakeSentry\\Test\\": "tests/",
            "App\\": "tests/test_app/app/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --colors -p ./src"
    },
    "config": {
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Hideki Kinjyo",
            "email": "dev@o0h.in",
            "role": "Maintainer"
        }
    ]
}
